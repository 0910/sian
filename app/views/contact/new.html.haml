.row-fluid.contact_us
  .span6
    %h2 Envianos tu consulta
    .span6.barrio
      .hr
    .span12.barrio
      = semantic_form_for @message, :url => contact_path do |f| 
        = f.input :name, :label => false, :input_html => {:placeholder => "Nombre"}
        = f.input :phone, :label => false, :input_html => {:placeholder => "Teléfono"}
        = f.input :email, :label => false, :input_html => {:placeholder => "E-mail"}
        = f.input :body, :as => :text,:label => false, :input_html => {:placeholder => "Commentarios...", :rows => 4}
        = f.button :Enviar, :class => 'do-form'
